{% extends 'AppBundle::base.html.twig' %}

{% block body %}
<div class="container list">
    <h1> {{ 'answers.list.title'|trans }}</h1>
    {# <button class="add"><a href="{{ url('answers-add') }}" title="add">Add</a></button> #}
    {% for type, messages in app.session.flashbag.all %}
        <div class="alert alert-{{ type }}" role="alert">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {% endfor %}
    {% if data|length %}
        <table>
        <tr>
            <th>Answer </th>
            <th>Actions</th>
        </tr>
        {% for row in data %}
                <tr class="colored">
                    <td>
                        <a href="{{ url('answers-view', { 'id' : row.id }) }}" title="view">
                            {{ row.content }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('answers-view', { 'id' : row.id }) }}" title="view">view</a><br/>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') and app.user.id %} {# == row.user.id %} #}
                            <a href="{{ url('answers-edit', { 'id' : row.id }) }}" title="edit">edit</a><br/>
                            <a href="{{ url('answers-delete', { 'id' : row.id }) }}" title="delete">delete</a>
                        {% endif %}
                    </td>
                </tr>
        {%  endfor %}
        </table>
    {% else %}
        <div> No data, sorry!</div>
    {% endif %}
</div>
{% endblock %}

