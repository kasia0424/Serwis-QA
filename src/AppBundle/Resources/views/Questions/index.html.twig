{% extends 'AppBundle::base.html.twig' %}

{% block body %}
<div class="container">
    <h1> {{ 'questions.list.title'|trans }}</h1>
    <button class="add"><a href="{{ url('questions-add') }}" title="add">Add</a></button>
    {% for type, messages in app.session.flashbag.all %}
        <div class="alert alert-{{ type }}" role="alert">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {% endfor %}
    {% if data|length %}
        <table>
        <tr>
            <th>Question Title </th>
            <th>Question Content </th>
            
            <th>Actions</th>
        </tr>
        {% for row in data %}
                <tr class="colored">
                    <td>
                        <span class="date">{{ row.date|date("m/d/Y") }}</span><br/><br/>
                        <a href="{{ url('questions-view', { 'id' : row.id }) }}" title="view">
                            {{ row.title }} 
                        </a>
                        (<a href="{{ url('questions-view', { 'id' : row.id }) }}" title="view">
                            {{ row.answers|length }}
                        </a>)
                    </td>
                    <td>{{ row.content }}</td>
                    <td>
                        <a href="{{ url('questions-view', { 'id' : row.id }) }}" title="view">Check answers  -></a><br/>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') and app.user.id %}{# == row.user.id %} #}
                            <button class="edit"><a href="{{ url('questions-edit', { 'id' : row.id }) }}" title="edit">edit</a></button><br/>
                            <button><a href="{{ url('questions-delete', { 'id' : row.id }) }}" title="delete">delete</a></button>
                        {% endif %}
                    </td>
                </tr>
        {%  endfor %}
        </table>
    {% else %}
        <div> No data, sorry!</div>
    {% endif %}
</div>
{% endblock %}

